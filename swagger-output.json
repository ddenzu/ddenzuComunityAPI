                  "type": "array"
                },
                "글수": {
                  "type": "integer",
                  "description": "전체 글 수"
                },
                "채팅사람": {
                  "type": "string",
                  "description": "채팅 사용자명"
                },
                "페이지넘버": {
                  "type": "integer",
                  "description": "현재 페이지 번호"
                },
                "resizeImg": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "이미지 경로"
                },
                "isRead": {
                  "type": "boolean",
                  "description": "읽음 여부"
                }
              }
            }
          },
          "404": {
